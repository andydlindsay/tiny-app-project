<!DOCTYPE html>
<html lang="en">

  <% include ./partials/_header %>

    <h1>Your Short URLs</h1>

    <table>
      <% for(let url in urlDatabase) { %>
        <tr>
          <td>
            <%= url %>
          </td>
          <td>
            <a href=<%= urlDatabase[url] %>><%= urlDatabase[url] %></a>
          </td>
          <td>
            <i class="far fa-edit"></i><a href=<%= `http://localhost:8080/urls/${url}` %>> Edit</a>
          </td>
          <td>
            <form method="POST" action=<%= `/urls/${url}/delete` %>>
              <button type="submit">
                Delete <i class="fas fa-trash-alt"></i>
              </button>
            </form>
          </td>
        </tr>
      <% } %>
    </table>

    <a href="/urls/new">Shorten a URL</a>
  </body>

</html>
